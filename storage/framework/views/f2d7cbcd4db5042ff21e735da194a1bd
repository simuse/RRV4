			<div class="description post-content">

				<?php /* image */ ?>
				<?php if($post['type'] === 'image'): ?>
					<a class="lightbox image" href="<?php echo e($post['url']); ?>" rel="group" target="_blank">
						<?php /* <h1>Image</h1> */ ?>
						<img class="post-img" src="<?php echo e($post['url']); ?>" data-src="<?php echo e($post['url']); ?>" alt="<?php echo e($post['title']); ?>">
					</a>

				<?php /* image */ ?>
				<?php elseif($post['type'] === 'gif'): ?>
					<a class="lightbox" href="<?php echo e($post['url']); ?>" rel="group" target="_blank">
						<?php /* <h1>GIF</h1> */ ?>
						<img class="post-img post-gif freezeframe" src="" data-src="<?php echo e($post['url']); ?>" alt="<?php echo e($post['title']); ?>">
					</a>

				<?php /* album */ ?>
				<?php elseif($post['type'] === 'album'): ?>
					<?php /* <h1>Album</h1> */ ?>
					<iframe class="post-album" width="100%" height="600" frameborder="0" src="<?php echo e($post['url']); ?>"></iframe>

				<?php /* gifv */ ?>
				<?php elseif($post['type'] === 'iframe'): ?>
					<?php /* <h1>GIFV</h1> */ ?>
					<iframe class="post-iframe" width="100%" height="400" frameborder="0" src="<?php echo e($post['url']); ?>"></iframe>

				<?php /* self */ ?>
				<?php elseif($post['type'] === 'reddit'): ?>
					<div class="selftext">
						<p><?php echo e($post['selftext']); ?></p>
						<button class="btn btn-secondary text-center btn-block show-full">
							<i class="fa fa-angle-double-down"></i>
							Show all
							<i class="fa fa-angle-double-down"></i>
						</button>
						<?php /* <?php echo $post['selftext_html']; ?> */ ?>
					</div>

				<?php /* video */ ?>
				<?php elseif($post['type'] === 'video'): ?>
					<?php /* <h1>Video</h1> */ ?>
					<div class="post-video embed-responsive embed-responsive-16by9">
						<iframe class="embed-responsive-item" src="" data-src="<?php echo e($post['url']); ?>"></iframe>
					</div>

				<?php /* page */ ?>
				<?php elseif($post['type'] === 'wikipedia'): ?>
					<h1>Wikipedia</h1>
					<iframe class="post-album" width="100%" height="400" frameborder="0" src="<?php echo e($post['url']); ?>"></iframe>

				<?php /* oembed */ ?>
				<?php elseif($post['type'] === 'oembed'): ?>
					<h1>OEmbed</h1>
					<?php d($post['oembed']) ?>
					<?php /* <iframe class="post-album" width="100%" height="400" frameborder="0" src="<?php echo e($post['url']); ?>"></iframe> */ ?>

				<?php /* unknown */ ?>
				<?php else: ?>
					<h4>Unknown Type </h4>
					<p><a href="<?php echo e($post['url']); ?>"><?php echo e($post['url']); ?></a></p>
					<p><?php echo e($post['domain']); ?></p>
					<?php d($post) ?>
				<?php endif; ?>

			</div>

		</div>

		<?php echo $__env->make('posts.post-footer', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>

